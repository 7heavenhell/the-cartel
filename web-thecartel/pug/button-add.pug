doctype html
html(lang="id")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Tombol Tambah
    style.
      .btn-add {
        background-color: blue; 
        color: white; 
        border: none; 
        padding: 10px 20px; 
        text-align: center; 
        text-decoration: none; 
        display: inline-block; 
        font-size: 16px; 
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 5px;
      }
      .btn-add:hover {
        background-color: darkblue;
      }

  
  mixin add(className, label)
    add(class=className)= label

  body
    
    +add('btn-add', 'Tambah')
